{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Flask Application",
      "type": "python",
      "request": "launch",
      "module": "flask",
      "env": {
        "FLASK_APP": "app/app.py",
        "FLASK_ENV": "development",
        "FLASK_DEBUG": "0"
      },
      "args": [
        "run",
        "--no-debugger",
        "--no-reload"
      ],
      "jinja": true
    },
    {
      "name": "Python Test",
      "type": "python",
      "request": "launch",
      "module": "pytest",
      "args": []
    }
  ]
}